<script type="module">

	const btn = document.querySelector('button')
	btn.addEventListener('click', async () => {
		await fetch(`/api/hello-world`)
			.then((res) => res.text())
			.then((data) => {
				alert(`success: ${JSON.stringify( data)}`,)
			})
			.catch((err) => {
				alert(`erro: ${JSON.stringify(err)}`, )
			})
	})
	</script>
	
	
