---
import Items from '../components/Item';
import Viewer  from '../components/Viewer';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Welcome to Astro.">
	<main class="flex w-full h-dvh shadow-lg bg-gray-900 text-gray-100">
		<section class="flex flex-col pt-3 w-4/12 bg-gray-800 h-full overflow-y-auto ">
			<label class="px-3">
				<input class="rounded-lg p-4 bg-gray-700 text-gray-200 transition duration-200 focus:outline-none focus:ring-2 w-full"
					placeholder="Search..." />
			</label>
	
			<Items client:visible />
			
		</section>
		<Viewer client:visible />
	</main>
</Layout>
